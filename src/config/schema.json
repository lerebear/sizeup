{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "configuration",
    "description": "YAML configuration accepted by sizeup",
    "type": "object",
    "properties": {
        "categories": {
            "description": "category that will be assigned to a pull request depending on its score",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "name of the category",
                        "type": "string"
                    },
                    "lt": {
                        "description": "exclusive upper bound on the score that a pull request must have to be assigned this category",
                        "type": "number",
                        "exclusiveMinimum": 0
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        "ignored": {
            "description": "glob expressions defining file patterns that are ignored in the scoring process",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "scoring": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "strategy": {
                            "description": "shorthand for a specific scoring formula",
                            "type": "string",
                            "enum": [
                                "default"
                            ]
                        }
                    },
                    "required": [
                        "strategy"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "formula": {
                            "description": "an expression, written in prefix-notation, that describes how to combine features to produce a score",
                            "type": "string"
                        }
                    },
                    "required": [
                        "formula"
                    ]
                }
            ]
        }
    }
}
